<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tag_row"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingBottom="15dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="15dp"
    android:weightSum="1">

    <View
        android:id="@+id/tag_color_view"
        style="@style/tag_square"
        android:background="#ccc" />

    <TextView
        android:id="@+id/tag_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title of the tag"
        android:textSize="18sp"
        android:layout_marginLeft="15dp"
        android:gravity="center_vertical" />

    <ImageView
        android:id="@+id/tag_selected_icon"
        android:src="@drawable/ic_star_rate_white_18dp"
        android:background="@color/red_btn_bg_color"
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="13" />

</GridLayout>